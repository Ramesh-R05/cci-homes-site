{
  "name": "homes-automation",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "setup:local": "bxm-automation-setup ./config/local.json",
    "setup:smoke-test": "bxm-automation-setup ./config/smoke-test.json",
    "setup:regression-test": "bxm-automation-setup ./config/regression-test.json",
    "setup:cms": "bxm-automation-setup ./config/cms.json",
    "test:ui": "bxm-automation open",
    "run:record:smoke-test": "bxm-automation run --record --key 5cc28f44-202c-4eaa-9daa-e522a4fbd8bf --group smoke-test --spec './integration/smoke-test/*.spec.js' ",
    "run:record:regression-test": "bxm-automation run --record --key 5cc28f44-202c-4eaa-9daa-e522a4fbd8bf --group regression-test --spec './integration/regression-test/*.spec.js' ",
    "run:record:cms": "bxm-automation run --record --key 5cc28f44-202c-4eaa-9daa-e522a4fbd8bf --group regression-test --spec './integration/cms/*.spec.js' ",
    "run:record:live": "bxm-automation run --record --key 5cc28f44-202c-4eaa-9daa-e522a4fbd8bf --group regression-test --spec './integration/live/*.spec.js' ",
    "run:local:smoke-test": "bxm-automation run --spec './integration/smoke-test/*.spec.js'",
    "run:local:regression-test": "bxm-automation run --spec './integration/regression-test/*.spec.js'",
    "local:dev": "run-s setup:local test:ui",
    "smoke-test:local": "run-s setup:local run:local:smoke-test",
    "regression-test:local": "run-s setup:local run:local:regression-test",
    "smoke-test:ci": "run-s setup:smoke-test run:record:smoke-test",
    "regression-test:ci": "run-s setup:regression-test run:record:regression-test",
    "cms:ci": "run-s setup:regression-test run:record:regression-test",
    "live:ci": "run-s setup:regression-test run:record:cms",
    "test:perf": "mocha --require babel-polyfill --require babel-register --reporter spec --recursive perf/lighthouse-tests.js "
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "cypress-cucumber-preprocessor": "^1.11.2",
    "gherkin": "^5.1.0",
    "he": "^1.1.1",
    "nconf": "^0.10.0",
    "npm-run-all": "^4.1.5"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "commonPath": "./features/support/step_definintions",
    "step_definitions": "./features/support/step_definitions"
  }
}
